<h1> Enter a new cat!</h1>
<form>
	<label for="name">Name</label>
	<input type="text">
	<br>

	<input type="radio" id="male" name="male" value="M">
	<label for="male">Male</label>
	<input type="radio" id="female" name="female" value="F">
	<label for="male">Female</label>
	
	<label for="cat_birth_date">Birth date</label>
  <input
    type="date"
    name="cat[birth_date]"
    id="cat_birth_date"
    value="<%= @cat.birth_date %>"
		>

		
  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
    <option disabled selected>-- select a color --</option>
      <% Cat::CAT_COLORS.each do |color| %>
        <option>
          <%= color.upcase %>
        </option>
      <% end %>
  </select>
  <br>

	<textarea id="description" name="description">Description</textarea>
	
</form>